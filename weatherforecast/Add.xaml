<Window x:Class="weatherforecast.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="Add"
        WindowStartupLocation="CenterScreen"
        Height="772"
        Width="800">
    <Grid Margin="0,0,0,0" Background="#FF224F75">

        <!-- Напис "Додати запис" -->
        <Label Content="Додати запис"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,48,0,0"
               FontSize="36"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Лейбли полів введення -->
        <Label Content="Дата"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,173,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Температура"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,247,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Опади"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,321,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Вологість"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,395,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Тиск"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,469,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Вітер"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,543,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Поля для введення -->
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="254"
                Margin="450,160,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox0" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="РРРР-ММ-ДД"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" MouseDoubleClick="TextBox1_MouseDC"/>
        </Border>
        <Border x:Name="Border1" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,234,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox1"
             Background="Transparent"
             BorderThickness="0"
             FontSize="18"
             Foreground="#FF092039"
             Text=""
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             TextAlignment="Right" Margin="0,0,50,0"/>
        </Border>
        <Border x:Name="Border2" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,308,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox2"
             Background="Transparent"
             BorderThickness="0"
             FontSize="18"
             Foreground="#FF092039"
             Text=""
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             TextAlignment="Right" Margin="0,0,50,0"/>
        </Border>
        <Border x:Name="Border3" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,382,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox3"
             Background="Transparent"
             BorderThickness="0"
             FontSize="18"
             Foreground="#FF092039"
             Text=""
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             TextAlignment="Right" Margin="0,0,50,0"/>
        </Border>
        <Border x:Name="Border4" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="254"
                Margin="450,456,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox4"
             Background="Transparent"
             BorderThickness="0"
             FontSize="18"
             Foreground="#FF092039"
             Text=""
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             TextAlignment="Right" Margin="0,0,104,0"/>
        </Border>
        <Border x:Name="Border5" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,530,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox5"
             Background="Transparent"
             BorderThickness="0"
             FontSize="18"
             Foreground="#FF092039"
             Text=""
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             TextAlignment="Right" Margin="0,0,60,0"/>
        </Border>

        <!-- Випадний список для опадів -->
        <Border x:Name="Border6" Margin="445,316,214,370">
            <ComboBox x:Name="ComboBox1" Background="#FFD5DDE2"
                      Margin="-1,-1,0,0"
                      VerticalAlignment="Top"
                      Height="60"
                      FontSize="18" Width="120" >

                <ComboBoxItem Content="дощ" FontSize="18"/>
                <ComboBoxItem Content="сніг" FontSize="18"/>
                <ComboBoxItem Content="град" FontSize="18"/>
                <ComboBoxItem Content="хмарно" FontSize="18"/>
                <ComboBoxItem Content="ясно" FontSize="18"/>
            </ComboBox>
        </Border>
        <!-- Випадний список для вітру -->
        <Border x:Name="Border7" Margin="445,538,214,148">
            <ComboBox x:Name="ComboBox2"
                      Margin="-1,-1,-1,0"
                      VerticalAlignment="Top"
                      Height="60"
                      FontSize="18" Width="120" >

                <ComboBoxItem Content="Пд" FontSize="18"/>
                <ComboBoxItem Content="Пн" FontSize="18"/>
                <ComboBoxItem Content="Сх" FontSize="18"/>
                <ComboBoxItem Content="Зх" FontSize="18"/>
                <ComboBoxItem Content="ПдСх" FontSize="18"/>
                <ComboBoxItem Content="ПдЗх" FontSize="18"/>
                <ComboBoxItem Content="ПнСх" FontSize="18"/>
                <ComboBoxItem Content="ПнЗх" FontSize="18"/>
            </ComboBox>
        </Border>

        <!-- Кнопка "Скасувати" -->
        <Button Content="Скасувати"
                HorizontalAlignment="Left"
                Margin="200,611,0,0"
                VerticalAlignment="Top"
                Background="#5ce1e6"
                FontSize="18"
                Height="60"
                Width="250"
                Foreground="#FF092039" Click="ButtonCancel_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="30"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "ОК" -->
        <Button Content="ОК"
                Background="#FFA6DBFF"
                FontSize="18"
                Height="74"
                Width="128"
                Foreground="#FF092039"
                Margin="481,604,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Click="ButtonOK_Click" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="30"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "Назад" -->
        <Button Content="Назад"
                HorizontalAlignment="Left"
                Margin="60,690,0,0"
                VerticalAlignment="Top"
                Click="ButtonBack_Click"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="White"
                FontSize="16"/>

        <!-- Температура -->
        <Border
        CornerRadius="20"
        Height="60"
        Width="100"
        Margin="509,234,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="°C"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="50,0,23,0"
                     TextAlignment="Right" IsReadOnly="True"/>
        </Border>

        <!-- Опади -->
        <Border
        CornerRadius="20"
        Height="60"
        Width="100"
        Margin="509,308,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="%"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="50,0,23,0"
                     TextAlignment="Right" IsReadOnly="True"/>
        </Border>

        <!-- Вологість -->
        <Border
        CornerRadius="20"
        Height="60"
        Width="100"
        Margin="509,382,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="%"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="50,0,23,0"
                     TextAlignment="Right" IsReadOnly="True"/>
        </Border>

        <!-- Тиск -->
        <Border
        CornerRadius="20"
        Height="60"
        Width="254"
        Margin="450,456,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="мм.рт.ст."
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="149,0,23,0"
                     TextAlignment="Right" IsReadOnly="True"/>
        </Border>

        <!-- Вітер -->
        <Border
        CornerRadius="20"
        Height="60"
        Width="100"
        Margin="509,530,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="м/с"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="44,0,23,0"
                     TextAlignment="Right" IsReadOnly="True"/>
        </Border>


    </Grid>
</Window>
