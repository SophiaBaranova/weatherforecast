<Window x:Class="weatherforecast.Greeting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="772"
        Width="800">
        <Grid Margin="0,0,0,0" Height="756" VerticalAlignment="Bottom">
        <Grid.Background>
            <ImageBrush ImageSource="\Images\background.JPG" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Кнопка "Увійти" -->
        <Button Content="Увійти" 
                HorizontalAlignment="Center" 
                Margin="0,303,0,0" 
                VerticalAlignment="Top" 
                Background="#FFA6DBFF" 
                FontSize="24" 
                Height="74" 
                Width="250"
                Foreground="#FF092039" FontWeight="Bold" Click="ButtonEnter_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="30" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "Зареєструватися" -->
        <Button Content="Зареєструватися" 
                HorizontalAlignment="Center" 
                Margin="0,416,0,0" 
                VerticalAlignment="Top" 
                Background="#FFA6DBFF" 
                FontSize="24" 
                Height="74" 
                Width="250" 
                Foreground="#FF092039" FontWeight="Bold" Click="ButtonRegister_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="30" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Напис "Вітаємо!" -->
        <Label Content="Вітаємо!" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,181,0,0" 
               FontSize="36" 
               FontWeight="Bold" 
               Foreground="White"/>

    </Grid>
</Window>