<Window x:Class="weatherforecast.SearchParam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="SearchParam"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="772"
        Width="800">
    <Grid Margin="0,0,0,0" Background="#FF224F75">

        <!-- Напис "Параметри пошуку" -->
        <Label Content="Параметри пошуку" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,85,0,0" 
               FontSize="32" 
               FontWeight="Bold" 
               Foreground="White"/>

        <!-- Лейбли полів введення -->
        <Label Content="Початок" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Top" 
          Margin="200,209,0,0" 
          FontSize="16" 
          Foreground="White" Width="70"/>
        <Label Content="Оберіть дату" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Top" 
          Margin="468,164,0,0" 
          FontSize="16" 
          Foreground="White" Width="136"/>
        <Label Content="Кінець" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Top" 
          Margin="200,353,0,0" 
          FontSize="16" 
          Foreground="White"/>
        <Label Content="Оберіть дату" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Top" 
          Margin="468,308,0,0" 
          FontSize="16" 
          Foreground="White" Width="136" RenderTransformOrigin="0.363,0.407"/>

        <!-- Поля для введення -->
        <Border x:Name="Border1" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="254"
                Margin="450,195,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox1" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="РРРР-ММ-ДД"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" MouseDoubleClick="TextBox1_MouseDC"/>
        </Border>
        <Border x:Name="Border2" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="254"
                Margin="450,339,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox2" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="РРРР-ММ-ДД"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" MouseDoubleClick="TextBox2_MouseDC"/>
        </Border>

        <!-- Кнопка "Скасувати" -->
        <Button Content="Скасувати"
                HorizontalAlignment="Left"
                Margin="200,611,0,0"
                VerticalAlignment="Top"
                Background="#5ce1e6"
                FontSize="18"
                Height="60"
                Width="250"
                Foreground="#FF092039" Click="ButtonCancel_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="30"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "ОК" -->
        <Button Content="ОК"
                Background="#FFA6DBFF"
                FontSize="18"
                Height="74"
                Width="128"
                Foreground="#FF092039"
                Margin="481,604,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Click="ButtonOK_Click" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="30"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "Назад" -->
        <Button Content="Назад"
                HorizontalAlignment="Left"
                Margin="60,690,0,0"
                VerticalAlignment="Top"
                Click="ButtonBack_Click"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="White"
                FontSize="16"/>

    </Grid>
</Window>
