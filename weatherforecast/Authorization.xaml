<Window x:Class="weatherforecast.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="Authorization"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="772"
        Width="800">
    <Grid Margin="0,0,0,0" Background="#FF224F75">

        <!-- Напис "Авторизація" -->
        <Label Content="Авторизація"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,48,0,0"
           FontSize="36"
           FontWeight="Bold"
           Foreground="White"/>

        <!-- Лейбли полів введення -->
        <Label Content="Введіть логін: "
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,209,0,0"
               FontSize="16" 
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Введіть пароль: "
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,329,0,0"
               FontSize="16"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Поле для логіна -->
        <Border x:Name="Border1" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="416"
                Margin="0,240,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox1" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="Логін"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" MouseDoubleClick="TextBox1_MouseDC"/>
        </Border>
        <!-- Поле для пароля -->
        <Border x:Name="Border2" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="416"
                Margin="0,360,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox2" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="Пароль"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" MouseDoubleClick="TextBox2_MouseDC"/>
        </Border>

        <!-- Кнопка "Увійти" -->
        <Button Content="Увійти"
                HorizontalAlignment="Center"
                Margin="0,500,0,0"
                VerticalAlignment="Top"
                Background="#FFA6DBFF"
                FontSize="24"
                Height="74"
                Width="250"
                Foreground="#FF092039" FontWeight="Bold" Click="ButtonEnter_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="30"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "Назад" -->
        <Button Content="Назад"
                HorizontalAlignment="Left"
                Margin="60,690,0,0"
                VerticalAlignment="Top"
                Click="ButtonBack_Click"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="White"
                FontSize="16"/>
        
    </Grid>
</Window>
