            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="492,471,0,0"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White"/>-->
        <!-- Лейбл для дати -->
        <Label x:Name="LabelDate" Content=""
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,168,214,0"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White"/>
        <!-- Лейбл для опадів -->
        <!--<Label x:Name="Label4" Content=""
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,330,582,0"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White"/>-->

        <!-- Іконки -->








    </Grid>
</Window>
