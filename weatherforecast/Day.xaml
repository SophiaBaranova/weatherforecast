<Window x:Class="weatherforecast.Day"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="Day"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="772"
        Width="800">
    <Grid Margin="0,0,0,0" Background="#FF224F75">

        <!-- Дуга на фоні -->
        <Ellipse HorizontalAlignment="Center"
                 Height="690"
                 Margin="0,291,0,0"
                 VerticalAlignment="Top"
                 Width="856"
                 Fill="#FF6496A2"/>

        <!-- Рамка -->
        <Border Background="#FF256279"
                CornerRadius="20"
                HorizontalAlignment="Center"
                Height="403"
                VerticalAlignment="Top"
                Width="372"
                Margin="0,199,0,0"/>

        <!-- Вологість -->
        <StackPanel Orientation="Vertical"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="248,420,0,0"
            Width="80">
            <Border Background="#FFD5DDE2" CornerRadius="20" Height="51" Width="57">
                <Image Source="/Images/humidity.png" Stretch="Fill" Margin="5,2,5,2"/>
            </Border>
            <Label x:Name="Label1"
           Content=""
           HorizontalAlignment="Center"
           FontSize="16"
           FontWeight="Bold"
           Foreground="White"/>
        </StackPanel>
        <!-- Тиск -->
        <StackPanel Orientation="Vertical"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,420,0,0"
            Width="80">
            <Border Background="#FFD5DDE2" CornerRadius="20" Height="51" Width="57">
                <Image Source="/Images/pressure.png" Stretch="Fill" Margin="5,2,5,2"/>
            </Border>
            <Label x:Name="Label2"
           Content=""
           HorizontalAlignment="Center"
           FontSize="16"
           FontWeight="Bold"
           Foreground="White"/>
        </StackPanel>
        <!-- Вітер -->
        <StackPanel Orientation="Vertical"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="472,420,0,0"
            Width="80">
            <Border Background="#FFD5DDE2" CornerRadius="20" Height="51" Width="57">
                <Image Source="/Images/wind.png" Stretch="Fill" Margin="2,2,3,1"/>
            </Border>
            <Label x:Name="Label3"
           Content=""
           HorizontalAlignment="Center"
           FontSize="16"
           FontWeight="Bold"
           Foreground="White"/>
        </StackPanel>

        <!-- Кнопка 1-й наступний день -->
        <Button x:Name="Button1" Content="" 
            Background="#FFD5DDE2" 
            FontSize="18" 
            Height="60" 
            Width="508" 
            Foreground="#FF092039" 
            Margin="0,542,0,0" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" Click="Button1_Click" FontWeight="Bold" BorderBrush="#FF020202">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="20" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка 2-й наступний день -->
        <Button x:Name="Button2" Content="" 
         Background="#FFD5DDE2" 
         FontSize="18" 
         Height="60" 
         Width="508" 
         Foreground="#FF092039" 
         Margin="0,636,0,0" 
         HorizontalAlignment="Center" 
         VerticalAlignment="Top" Click="Button2_Click" FontWeight="Bold" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                     CornerRadius="20" 
                     BorderBrush="{TemplateBinding BorderBrush}" 
                     BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "Назад" -->
        <Button Content="Назад" 
            HorizontalAlignment="Left" 
            Margin="60,60,0,0" 
            VerticalAlignment="Top" 
            Click="ButtonBack_Click" 
            Background="{x:Null}" 
            BorderBrush="{x:Null}" 
            Foreground="White" 
            FontSize="16"/>

        <!-- Іконка для опадів -->
        <StackPanel Orientation="Vertical"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="122,133,0,0"
            Width="180">
            <Image x:Name="Image1" HorizontalAlignment="Left" Height="180" VerticalAlignment="Top" Width="180"/>
            <Label x:Name="Label4"
           Content=""
           HorizontalAlignment="Center"
           FontSize="16"
           FontWeight="Bold"
           Foreground="White"/>
        </StackPanel>



        <!-- Лейбл для температури -->
        <Label x:Name="LabelTemp" Content=""
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,334,0,0"
            FontSize="36"
            FontWeight="Bold"
            Foreground="White"/>
        <!-- Лейбл для вологості -->
        <!--
        <Label x:Name="Label1" Content=""
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="296,471,0,0"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White"/>
        -->
        <!-- Лейбл для тиску -->
        <!--
        <Label x:Name="Label2" Content=""
