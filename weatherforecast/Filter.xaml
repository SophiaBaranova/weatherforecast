<Window x:Class="weatherforecast.Filter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="Filter"
        WindowStartupLocation="CenterScreen"
        Height="772"
        Width="800">
    <Grid Margin="0,0,0,0" Background="#FF224F75">

        <!-- Напис "Відбір даних" -->
        <Label Content="Відбір даних"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,85,0,0"
               FontSize="36"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Лейбли полів введення -->
        <Label Content="Температура"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,209,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Опади"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,329,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Лейбли-підказки -->
        <Label Content="Від"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="362,162,0,0"
               FontSize="16"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="До"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="524,162,0,0"
               FontSize="16"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Поля для температури -->
        <Border x:Name="Border1" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="0,196,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox1"
             Background="Transparent"
             BorderThickness="0"
             FontSize="18"
             Foreground="#FF092039"
             Text=""
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             TextAlignment="Right" Margin="0,0,50,0"/>
        </Border>
        <Border
        CornerRadius="20"
        Height="60"
        Width="100"
        Margin="0,196,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="°C"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="50,0,23,0"
                     TextAlignment="Right" IsReadOnly="True"/>
        </Border>

        <Border x:Name="Border2" Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,196,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox2"
             Background="Transparent"
             BorderThickness="0"
             FontSize="18"
             Foreground="#FF092039"
             Text=""
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             TextAlignment="Right" Margin="0,0,50,0"/>
        </Border>
        <Border
            CornerRadius="20"
            Height="60"
            Width="100"
            Margin="509,196,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="°C"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="50,0,23,0"
                     TextAlignment="Right" IsReadOnly="True"/>
        </Border>

        <!-- Випадний список для опадів -->
        <Border x:Name="Border3" Margin="481,318,0,365" Width="128" HorizontalAlignment="Left">
            <ComboBox x:Name="ComboBox1" Background="#FFD5DDE2"
                      Margin="-1,-1,0,0"
                      VerticalAlignment="Top"
                      Height="60"
                      FontSize="18" Width="128" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                <ComboBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.157"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.164"/>
                    </TransformGroup>
                </ComboBox.RenderTransform>

                <ComboBoxItem Content="дощ" FontSize="18"/>
                <ComboBoxItem Content="сніг" FontSize="18"/>
                <ComboBoxItem Content="град" FontSize="18"/>
                <ComboBoxItem Content="хмарно" FontSize="18"/>
                <ComboBoxItem Content="ясно" FontSize="18"/>
            </ComboBox>
        </Border>

        <!-- Кнопка "Скасувати" -->
        <Button Content="Скасувати"
                HorizontalAlignment="Left"
                Margin="200,611,0,0"
                VerticalAlignment="Top"
                Background="#5ce1e6"
                FontSize="18"
                Height="60"
                Width="250"
                Foreground="#FF092039" Click="ButtonCancel_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="30"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "ОК" -->
        <Button Content="ОК"
                Background="#FFA6DBFF"
                FontSize="18"
                Height="74"
                Width="128"
                Foreground="#FF092039"
                Margin="481,604,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Click="ButtonOK_Click" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="30"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "Назад" -->
        <Button Content="Назад"
                HorizontalAlignment="Left"
                Margin="60,690,0,0"
                VerticalAlignment="Top"
                Click="ButtonBack_Click"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="White"
                FontSize="16"/>

    </Grid>
</Window>
