<Window x:Class="weatherforecast.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-322" Background="#FF224F75">

        <!-- Кнопка "Увійти" -->
        <Button Content="Введіть логін" 
                HorizontalAlignment="Center" 
                Margin="0,209,0,0" 
                VerticalAlignment="Top" 
                Background="#FFA6DBFF" 
                FontSize="18" 
                Height="60" 
                Width="505" 
                Foreground="#FF092039">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="30" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка "Реєстрація" -->
        <Button Content="Введіть пароль" 
                HorizontalAlignment="Center" 
                Margin="0,341,0,0" 
                VerticalAlignment="Top" 
                Background="#FFA6DBFF" 
                FontSize="18" 
                Height="60" 
                Width="504" 
                Foreground="#FF092039">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="30" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Content="Підтвердіть пароль" 
                HorizontalAlignment="Center" 
                Margin="0,442,0,0" 
                VerticalAlignment="Top" 
                Background="#FFA6DBFF" 
                FontSize="18" 
                Height="60" 
                Width="504" 
                Foreground="#FF092039">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="30" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label Content="Введіть логін: " 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,170,0,0" 
               FontSize="16" 
               FontWeight="Bold" 
               Foreground="White"/>
        <Label Content="Введіть пароль: " 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Margin="705,1000,0,0" 
               FontSize="16" 
               FontWeight="Bold" 
               Foreground="White"/>
        <Label Content="Підтвердіть пароль: " 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Margin="176,406,0,0" 
               FontSize="12" 
               FontWeight="Bold" 
               Foreground="White"/>
    </Grid>
</Window>