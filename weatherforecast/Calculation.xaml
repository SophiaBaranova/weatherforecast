<Window x:Class="weatherforecast.Calculation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherforecast"
        mc:Ignorable="d"
        Title="Calculation"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="772"
        Width="800">
    <Grid Margin="0,0,0,0" Background="#FF224F75">

        <!-- Напис "Розрахунок середньомісячних показників" -->
        <Label Content="Розрахунок середньомісячних показників"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,48,0,0"
               FontSize="36"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Лейбли полів введення -->
        <Label Content="Температура"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,173,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Опади"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,247,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Вологість"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,469,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
        <Label Content="Тиск"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="200,543,0,0"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- Поля для введення -->
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,160,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox1" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="°C"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="0,0,23,0" TextAlignment="Right" HorizontalAlignment="Right" Width="54"/>
        </Border>
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,234,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox2" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="%"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" TextAlignment="Right"/>
        </Border>
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,308,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox3" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="%"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" TextAlignment="Right"/>
        </Border>
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,382,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox4" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="%"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" TextAlignment="Right"/>
        </Border>
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="509,456,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox5" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="%"
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" TextAlignment="Right"/>
        </Border>
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="254"
                Margin="450,530,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBox x:Name="TextBox6" Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="мм.рт.ст."
                     HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0" TextAlignment="Right"/>
        </Border>

        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="200,234,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="Дощ"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0"
                     TextAlignment="Center"/>
        </Border>
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="200,308,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="Сніг"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0"
                     TextAlignment="Center"/>
        </Border>
        <Border Background="#d5dde2"
                CornerRadius="20"
                Height="60"
                Width="100"
                Margin="200,382,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <TextBox Background="Transparent"
                     BorderThickness="0"
                     FontSize="18"
                     Foreground="#FF092039"
                     Text="Град"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Margin="23,0,23,0"
                     TextAlignment="Center"/>
        </Border>

        <!-- Кнопка "Назад" -->
        <Button Content="Назад"
                HorizontalAlignment="Left"
                Margin="60,690,0,0"
                VerticalAlignment="Top"
                Click="ButtonBack_Click"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="White"
                FontSize="16"/>

    </Grid>
</Window>
